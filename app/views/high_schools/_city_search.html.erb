<div id="home-search-container">
	<div class="city-state-container">
		<div class="filter-select state-select select" id="state-city-filter">
			<%= label_tag "State" %><br>
			<%= select_tag "state", 
				options_from_collection_for_select(
					@states,
					"abbreviation",
					"name", params[:state] 
					),{ include_blank: "STATE", 
						id: 'state-search-input' } %>
		</div>
		<div  id="state-city-filter-city">
			<%= label_tag "City" %><br>
			<%= text_field_tag "high_school[city_query]", params[:high_school] && params[:high_school]["city_query"],
			  { placeholder: 'All',
				id: "city-search" } %>	
		</div>
	</div>	
	<div id="search-button-container">	
		<% if params[:high_school].blank?%>
			<button type="submit" id="city-search-button" class="btn">SEARCH</button>
		<% end %>
	</div>		
</div>
